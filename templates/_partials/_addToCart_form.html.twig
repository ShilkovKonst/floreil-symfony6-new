{% if product.inStockQnty > 0 %}
	<label for="cart_qnty" class='form-label fw-bold'>Choisir une quantité:</label>
	<select class="form-select" aria-label="Default select example" id="cart_qnty" name="cart_qnty">
		{% for i in range(1, product.inStockQnty) %}
			<option value="{{ i }}">{{ i }}</option>
		{% endfor %}
	</select>
	<button type="submit" class="btn btn-body fw-bold text-shadow rounded-pill w-100 mt-3 bodybtn_text_shadow">{{ button_title }}</button>
{% else %}
	<label for="cart_qnty" class='form-label fw-bold'>Choisir une quantité:</label>
	<select class="form-select" aria-label="Default select example" id="cart_qnty" name="cart_qnty" disabled>
		{% for i in range(1, product.inStockQnty) %}
			<option value="{{ i }}">{{ i }}</option>
		{% endfor %}
	</select>
	<button type="submit" class="btn btn-body fw-bold text-shadow rounded-pill w-100 mt-3 bodybtn_text_shadow" disabled>{{ button_title }}</button>
{% endif %}
